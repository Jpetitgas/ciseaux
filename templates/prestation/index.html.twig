{% extends 'base.html.twig' %}

{% block title %}Prestation
{% endblock %}

{% block body %}
	<div class="container">
		<h1 style="text-align: center">Liste des prestations</h1>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-sm-2">
				<h4>Prestations</h4>
			</div>
			<div class="col-sm-2">
				<h4>Couleur</h4>
			</div>

		</div>
		{% for prestation in prestations %}
			<div class="row">
				<div class="col-sm-4">{{ prestation.typeDePrestation}}</div>
				<div class="col-sm-2">{{ prestation.colors}}</div>

				<div class="col-sm-2">
					<a href="{{path("prestation_edit", {'id': prestation.id})}}" class="btn btn-primary">
						<i class=" fas fa-edit"></i>
					</a>
					<a href="{{path("prestation_delete", {'id': prestation.id})}}" class="btn btn-danger">
						<i class=" fas fa-trash"></i>
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
	{{form_start(formView)}}
	{{form_errors(formView)}}
	<div class="container">
		<div class="row">
			<div class="col-sm-4">{{form_row(formView.typeDePrestation,{'label' :false})}}</div>
			<div class="col-sm-2">{{form_row(formView.colors,{'label' :false})}}</div>

			<div class="col-sm-2">
				<button type="submit" class="btn btn-primary">
					<i class=" fas fa-save"></i>
				</button>
			</div>
		</div>
	</div>
</div>

{{form_end(formView)}}{% endblock %}
